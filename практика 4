#–≤–∞—Ä–∏–∞–Ω—Ç 1 
#–∑–∞–¥–∞–Ω–∏–µ 1 
number = int(input("–í–≤–µ–¥–∏—Ç–µ —Ü–µ–ª–æ–µ —á–∏—Å–ª–æ: "))

if number < 0:
    number = -number
    print(number)
elif number == 0:
    print(1)
else:
    print(number)

#–∑–∞–¥–∞–Ω–∏–µ 2

s = input("–í–≤–µ–¥–∏—Ç–µ —Å—Ç—Ä–æ–∫—É: ")

if '.' in s or ',' in s:
    print(True)
else:
    print(False)

#–∑–∞–¥–∞–Ω–∏–µ 3

num1 = int(input("–í–≤–µ–¥–∏—Ç–µ –ø–µ—Ä–≤–æ–µ —á–∏—Å–ª–æ: "))
num2 = int(input("–í–≤–µ–¥–∏—Ç–µ –≤—Ç–æ—Ä–æ–µ —á–∏—Å–ª–æ: "))

if num1 % 3 == 0 and num2 % 3 == 0:
    print(True)
elif num1 % 3 == 0 or num2 % 3 == 0:
    print("–û–¥–Ω–æ —á–∏—Å–ª–æ –¥–µ–ª–∏—Ç—Å—è –Ω–∞ 3")
else:
    print(False)

#–≤–∞—Ä–∏–∞–Ω—Ç 2 
#–∑–∞–¥–∞–Ω–∏–µ 1

num = int(input("–í–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ: "))

if num > 100:
    print("*")
elif num >= 0:
    print("*" * num)

#–∑–∞–¥–∞–Ω–∏–µ 2

str1 = input("–í–≤–µ–¥–∏—Ç–µ –ø–µ—Ä–≤—É—é —Å—Ç—Ä–æ–∫—É")
str2 = input("–í–≤–µ–¥–∏—Ç–µ –≤—Ç–æ—Ä—É—é —Å—Ç—Ä–æ–∫—É")

if str1 == str2:
        print(True)
else:
    print(False)

#–∑–∞–¥–∞–Ω–∏–µ 3

r =int(input("–í–≤–µ–¥–∏—Ç–µ –∑–Ω–∞—á–Ω–∏–µ r: "))
g =int(input("–í–≤–µ–¥–∏—Ç–µ –∑–Ω–∞—á–Ω–∏–µ g: "))
b =int(input("–í–≤–µ–¥–∏—Ç–µ –∑–Ω–∞—á–Ω–∏–µ b: "))

if r == 0 and g == 0 and b == 0:
    print("—á–µ—Ä–Ω—ã–π —Ü–≤–µ—Ç")
elif r == 255 and g == 255 and b == 255:
    print("–ë–µ–ª—ã–π —Ü–≤–µ—Ç")
if r == 255 and g == 0 and b == 0:
    print("–ö—Ä–∞—Å–Ω—ã–π —Ü–≤–µ—Ç")
if r == 0 and g == 255 and b == 0:
    print("–ó–µ–ª–µ–Ω—ã–π —Ü–≤–µ—Ç")
if r == 0 and g == 0 and b == 255:
    print("–°–∏–Ω–∏–π —Ü–≤–µ—Ç")
else:
    print("–ù–µ—Ç —Ü–≤–µ—Ç–∞")

# –≤–∞—Ä–∏–∞–Ω—Ç 3   
#–∑–∞–¥–∞–Ω–∏–µ 1

n = int(input("–í–≤–µ–¥–∏—Ç–µ —á–∏—Å–ª–æ: "))

if n <= 0:
    n = 1

print(n - 1, n, n + 1)

#–∑–∞–¥–∞–Ω–∏–µ 2

filename = input("–í–≤–µ–¥–∏—Ç–µ –∏–º—è —Ñ–∞–π–ª–∞ —Å —Ä–∞—Å—à–∏—Ä–µ–Ω–∏–µ–º: ")

if filename.endswith(".doc"):
    print("Word file")
elif filename.endswith(".py"):
    print("Python file")
elif filename.endswith(".txt"):
    print("Text file")
else:
    print("–ù–µ–∏–∑–≤–µ—Å—Ç–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç")

#–∑–∞–¥–∞–Ω–∏–µ 3 

side1 = input("–í–≤–µ–¥–∏—Ç–µ –ø–µ—Ä–≤—É—é —Å—Ç–æ—Ä–æ–Ω—É —Ç—Ä–µ—É–≥–æ–ª—å–Ω–∏–∫–∞: ")
side2 = input("–í–≤–µ–¥–∏—Ç–µ –≤—Ç–æ—Ä—É—é —Å—Ç–æ—Ä–æ–Ω—É —Ç—Ä–µ—É–≥–æ–ª—å–Ω–∏–∫–∞: ")
side3 = input("–í–≤–µ–¥–∏—Ç–µ —Ç—Ä–µ—Ç—å—é —Å—Ç–æ—Ä–æ–Ω—É —Ç—Ä–µ—É–≥–æ–ª—å–Ω–∏–∫–∞: ")

if side1 == side2 == side3:
    print("—Ä–∞–≤–Ω–æ—Å—Ç–æ—Ä–æ–Ω–Ω–∏–π")
elif side2 == side3:
    print("–†–∞–≤–Ω–æ–±–µ–¥—Ä–µ–Ω–Ω—ã–π")
elif side1 != side2 != side3:
    print("–†–∞–∑–Ω–æ—Å—Ç–æ—Ä–æ–Ω–Ω–∏–π") 

#–≤–∞—Ä–∏–∞–Ω—Ç 4 
#–∑–∞–¥–∞–Ω–∏–µ 1

text = 'important information in one line'

letter = input("–í–≤–µ–¥–∏—Ç–µ –±—É–∫–≤—É: ")

if letter in text:
    print(True)
else:
    print(False)

#–∑–∞–¥–∞–Ω–∏–µ 2 

side1 = float(input("–í–≤–µ–¥–∏—Ç–µ –ø–µ—Ä–≤—É—é —Å—Ç–æ—Ä–æ–Ω—É: "))
side2 = float(input("–í–≤–µ–¥–∏—Ç–µ –≤—Ç–æ—Ä—É—é —Å—Ç–æ—Ä–æ–Ω—É: "))

if side1 == side2:
    print("–§–∏–≥—É—Ä–∞: –∫–≤–∞–¥—Ä–∞—Ç")
else:
    print("–§–∏–≥—É—Ä–∞: –ø—Ä—è–º–æ—É–≥–æ–ª—å–Ω–∏–∫")

area = side1 * side2
print(f"–ü–ª–æ—â–∞–¥—å: {area}")

#–∑–∞–¥–∞–Ω–∏–µ 3 

answer = input("–ö–∞–∫ —Ç–≤–æ–∏ –¥–µ–ª–∞? ").lower()

if answer in ("—Ö–æ—Ä–æ—à–æ", "–Ω–æ—Ä–º–∞–ª—å–Ω–æ", "–æ—Ç–ª–∏—á–Ω–æ"):
    print("üòä")
elif answer in ("–ø–ª–æ—Ö–æ", "–Ω–µ —Ö–æ—Ä–æ—à–æ", "‚Ä¶"):
    print("üòî")
else:
    print("üòê")

#–∑–∞–¥–∞–Ω–∏–µ 1

num1 = float(input("–í–≤–µ–¥–∏—Ç–µ –ø–µ—Ä–≤–æ–µ —á–∏—Å–ª–æ: "))
num2 = float(input("–í–≤–µ–¥–∏—Ç–µ –≤—Ç–æ—Ä–æ–µ —á–∏—Å–ª–æ: "))

if num1 > num2:
    result = num1 ** num2
elif num2 > num1:
    result = num2 ** num1
else:
    result = num1 + num2

print("–†–µ–∑—É–ª—å—Ç–∞—Ç:", result)

#–∑–∞–¥–∞–Ω–∏–µ 2

new_message = "Hello! How are you?"

my_answer = input("–í–≤–µ–¥–∏—Ç–µ –≤–∞—à –æ—Ç–≤–µ—Ç –Ω–∞ —Å–æ–æ–±—â–µ–Ω–∏–µ: ")

if new_message[0] == my_answer[0]:
    print(True)
else:
    print(False)

#–∑–∞–¥–∞–Ω–∏–µ 3 

segment1 = float(input("–í–≤–µ–¥–∏—Ç–µ –¥–ª–∏–Ω—É –ø–µ—Ä–≤–æ–≥–æ –æ—Ç—Ä–µ–∑–∫–∞: "))
segment2 = float(input("–í–≤–µ–¥–∏—Ç–µ –¥–ª–∏–Ω—É –≤—Ç–æ—Ä–æ–≥–æ –æ—Ç—Ä–µ–∑–∫–∞: "))

if segment1 > segment2:
    diff = segment1 - segment2
    print(f"–ü–µ—Ä–≤—ã–π –æ—Ç—Ä–µ–∑–æ–∫ –¥–ª–∏–Ω–Ω–µ–µ –Ω–∞ {diff}")
elif segment2 > segment1:
    diff = segment2 - segment1
    print(f"–í—Ç–æ—Ä–æ–π –æ—Ç—Ä–µ–∑–æ–∫ –¥–ª–∏–Ω–Ω–µ–µ –Ω–∞ {diff}")
else:
    print("–û—Ç—Ä–µ–∑–∫–∏ —Ä–∞–≤–Ω—ã")
